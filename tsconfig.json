{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": false, // no errors on commonjs default import
    "checkJs": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true, // importing helper functions from tslib
    "lib": ["es6", "es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": true, // disable emitting inline helper functions
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    // TODO: recommend doing a refactor to turn these to true in order of priority listed below
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noImplicitReturns": false
  },
  "include": ["src/**/*", "tslint/**/*"],
  "exclude": ["node_modules"]
}
